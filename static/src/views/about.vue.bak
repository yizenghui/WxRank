<template>
  <div>     
    <nav-bar title="圈内那点事儿"></nav-bar>

    <scroller style="padding-top: 44px;"
              :on-refresh="refresh"
              :on-infinite="infinite"
              ref="my_scroller">

      <div v-for="(item, index) in items" @click="onItemClick(index, item)"
          class="row" :class="{'grey-bg': index % 2 == 0}">

        <img src="http://w.mmcity.cn/public/wechatImg2/74a21a0081072ab2c94e7d34ae2b417e.jpg?wx_fmt=png">
        <span class="title">
        {{ item }}
        </span>
        <span class="author">
        XX公众号
        </span>
        <span class="date">
        10/4 23:34
        </span>
      </div>
    </scroller>
  </div>
</template>
<style>
html, body {
  margin: 0 auto
}

