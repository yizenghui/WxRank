    font-size: 16px;
    display: inline-block;
    height: 51.2px;
    overflow: hidden;
    text-overflow: ellipsis;
}
.row .date {
    color: #cccccc;
    position: absolute;
    bottom: 9px;
    right: 0;
    font-size: 12px;
}
.row .author {
    color: #cccccc;
    position: absolute;
